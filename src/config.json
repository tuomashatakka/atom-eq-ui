{
  "display": {
    "order": 2,
    "title": "Display",
    "description": "Hide unnecessary clutter",
    "type": "object",
    "properties": {
      "dockTabs": {
        "order": 1,
        "title": "Show all tab bars",
        "description": "Uncheck to disable docks' tab bars",
        "type": "boolean",
        "default": true
      },
      "coloredTabs": {
        "order": 2,
        "title": "Inverse tab colors",
        "description": "If enabled, tabs' active/inactive background colors are inverted.",
        "type": "boolean",
        "default": true
      }
    }
  },
  "layout": {
    "order": 1,
    "title": "Size & layout",
    "description": "General user interface definitions",
    "type": "object",
    "properties": {
      "scale": {
        "order": 1,
        "title": "Spacing for UI",
        "description": "Scale the user interface (does not affect the text editor font size)",
        "type": "integer",
        "default": 100,
        "minimum": 50,
        "maximum": 150
      },
      "size": {
        "order": 2,
        "title": "Basis for UI components' sizing",
        "description": "Text, tabs, inputs, buttons, ...",
        "type": "integer",
        "default": 100,
        "minimum": 50,
        "maximum": 150
      },
      "tabHeight": {
        "order": 3,
        "title": "Tab Height",
        "description": "Tab bar's height",
        "type": "number",
        "default": 1,
        "enum": [
          0.6,
          0.8,
          1,
          1.2,
          1.4,
          1.6,
          1.8,
          2
        ]
      },
      "statusBarHeight": {
        "order": 4,
        "title": "Status Bar Height",
        "description": "Factor for the status bar's height",
        "type": "number",
        "default": 1,
        "enum": [
          0.25,
          0.5,
          0.75,
          1,
          1.25,
          1.5
        ]
      }
    }
  },
  "colors": {
    "order": 3,
    "title": "Theme colors",
    "type": "object",
    "properties": {
      "tint": {
        "order": 1,
        "title": "Tint color",
        "type": "color",
        "default": "#808080"
      }
    }
  }
}
